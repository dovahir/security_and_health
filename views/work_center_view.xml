<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_work_center_form" model="ir.ui.view">
        <field name="name">Work Center Form</field>
        <field name="model">work.area</field>
        <field name="arch" type="xml">
            <form string="Centro de Trabajo y Areas">
                <sheet>
                    <group>
                        <field name="location_id"/>
                        <field name="name"/>
                    </group>

                    <notebook>
                        <page string="Areas registradas">
                            <field name="location_area_ids">
                                <tree editable="bottom" string="Areas">
                                     <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_work_center_tree" model="ir.ui.view">
        <field name="name">Work Center Tree</field>
        <field name="model">work.area</field>
        <field name="arch" type="xml">
            <tree string="Centros de Trabajo">
                <field name="location_id" readonly="1"/>
<!--                <field name="num_areas" readonly="1"/>-->
            </tree>
        </field>
    </record>

    <record id="action_work_center" model="ir.actions.act_window">
        <field name="name">Centros y Areas de Trabajo</field>
        <field name="res_model">work.area</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>