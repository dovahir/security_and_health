<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hr_employee_view_form_inherit_security_health" model="ir.ui.view">
        <field name="name">Employee Security Form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                        type="object"
                        name="action_open_employee_situations"
                        help="Situaciones de seguridad registradas de este empleado">
                    <div>
                        <span>Inc.</span><br/>
                        <span><field name="incident_count_string" widget="badge" decoration-warning="incident_count_string"/></span>
                    </div>
                    <div>
                        <span>Acc.</span><br/>
                        <span> <field name="accident_count_string" widget="badge" decoration-danger="accident_count_string"/></span>
                    </div>
                    <div>
                        <span>Cua.</span><br/>
                        <span> <field name="quasi_accident_count_string" widget="badge" decoration-info="quasi_accident_count_string"/></span>
                    </div>
                </button>
            </xpath>
            <notebook position="inside">
                <page name="employee_pressure" string="Salud y Seguridad">
                    <group string="Información de Salud General">
                        <field name="blood_type" readonly="1"/>
                        <label for="last_height" string="Estatura (cm)"/>
                        <div><field name="last_height" readonly="1" class="oe_inline"/></div>
                        <label for="last_weight" string="Peso (kg)"/>
                        <div><field name="last_weight" readonly="1" class="oe_inline"/></div>
                        <label for="last_imc" string="IMC"/>
                        <div><field name="last_imc" readonly="1" class="oe_inline"/></div>
                    </group>
                    <group string="Información de Seguridad">
                        <field name="last_accident_date" readonly="1" string="Último Accidente"/>
                    </group>
                    <group string="Promedios de Salud">
                        <label for="avg_systolic" string="Promedio de presión (mmHg)"/>
                        <div>
                            <field name="avg_systolic" readonly="1" class="oe_inline"/>
                            <span class="oe_inline"> : </span>
                            <field name="avg_diastolic" readonly="1" class="oe_inline"/>
                        </div>
                    </group>
                    <notebook>
                        <page name="pressure_tracking" string="Seguimiento de la presión">
                            <field name="pressure_daily_ids" widget="section_and_content" nolabel="1">
                                <tree editable="bottom">
                                    <field name="record_date"/>
                                    <field name="blood_pressure_systolic"/>
                                    <field name="blood_pressure_diastolic"/>
                                </tree>
                            </field>
                        </page>
                        <page name="medical_analysis" string="Análisis Médicos">
                            <field name="analysis_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="file_name"/>
                                    <field name="analysis_date"/>
                                </tree>
                            </field>
                        </page>
                        <page name="health_records" string="Historial de Salud">
                            <field name="health_record_ids" nolabel="1">
                                <tree editable="bottom" create="false">
                                    <field name="record_date" readonly="1"/>
                                    <field name="height" readonly="1"/>
                                    <field name="weight" readonly="1"/>
                                    <field name="blood_type" readonly="1"/>
                                    <field name="imc" readonly="1"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </notebook>

        </field>
    </record>
</odoo>