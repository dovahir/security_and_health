<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_employee_pressure_form" model="ir.ui.view">
        <field name="name">Employee Pressure Form</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <form string="Registro de Presión">
                <sheet>
                    <group>
                        <group string="Info. del Empleado">
                            <field name="employee_id" options="{'no_create': True}" widget="many2one_avatar_user"/>
                            <field name="department_id"/>
                        </group>
                        <group string="Valoración">
                            <field name="record_date"/>
                            <label for="ta_systolic" string="Presión Arterial (mmHg)"/>
                            <div>
                                <span><strong>Sistólica:</strong></span>
                                <field name="ta_systolic" class="oe_inline" required="1"/>
                                <span><strong>Diastólica:</strong></span>
                                <field name="ta_diastolic" class="oe_inline" required="1"/>
                            </div>
                            <field name="fc" required="1"/>
                        </group>
                        <field name="observations" placeholder="Observaciones..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_pressure_tree" model="ir.ui.view">
        <field name="name">Employee Health Tree</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <tree string="Registros Presión Diarios">
                <field name="employee_id" widget="many2one_avatar_user"/>
                <field name="record_date"/>
                <field name="ta_systolic"/>
                <field name="ta_diastolic"/>
                <field name="fc"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_pressure_search" model="ir.ui.view">
        <field name="name">Security Attention Search</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <search string="Buscar empleado">
                <field name="employee_id"/>

                <separator/>
                <filter name="record_date" string="Fecha" date="record_date"/>
                <separator/>

                <group expand="1" string="Agrupar por">
                    <filter name="group_by_employee" string="Empleado"
                            context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_employee_pressure_daily" model="ir.actions.act_window">
        <field name="name">Registros diarios de presión</field>
        <field name="res_model">employee.pressure</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>